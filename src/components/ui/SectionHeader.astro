---
interface Props {
  title: string;
  subtitle?: string;
  actionLabel?: string;
  actionHref?: string;
}

const { title, subtitle, actionLabel, actionHref } = Astro.props;
---

<div class="section-header mb-12 flex items-end justify-between border-b border-white/10 pb-4">
  <div>
    <h2 class="text-3xl md:text-4xl font-serif font-bold text-slate-100">{title}</h2>
    {subtitle && <p class="mt-2 text-base text-zinc-300 font-sans">{subtitle}</p>}
  </div>
  {actionLabel && actionHref && (
    <a
      href={actionHref}
      class="text-sm font-medium text-white/70 hover:text-white transition-all font-sans hover:drop-shadow-[0_0_8px_rgba(255,255,255,0.5)]"
    >
      {actionLabel} â†’
    </a>
  )}
</div>

