---
interface Props {
  href?: string;
  label?: string;
  id?: string;
  class?: string;
}

const { href = '/', label = 'Back to Home', id, class: className } = Astro.props;
---

<a
  id={id}
  href={href}
  class={`moonlight-text-link inline-block mb-6 text-[14px] uppercase tracking-wide font-sans opacity-70 hover:opacity-100 transition-all duration-300 ease-out ${className || ''}`}
>
  ‚Üê {label}
</a>

