---
interface Props {
  title: string;
  date: Date | string;
  slug: string;
  tags?: string[];
  canonicalUrl?: string;
}

const { title, date, slug, tags, canonicalUrl } = Astro.props;

const postDate = typeof date === 'string' ? new Date(date) : date;
---

<a
  href={`/notes/${slug}`}
  class="note-card group bg-white/[0.03] backdrop-blur-xl border border-white/10 rounded-lg p-5 border-t-white/20 hover:border-white/20 hover:bg-white/[0.06] hover:shadow-[0_0_15px_rgba(255,255,255,0.3)] transition-all duration-300"
>
          <h3 class="text-base font-serif font-semibold text-slate-100 group-hover:text-white group-hover:drop-shadow-[0_0_8px_rgba(255,255,255,0.5)] transition-all mb-2 line-clamp-2">
    {title}
  </h3>
  
  <div class="flex items-center justify-between mt-3">
    <time
      datetime={postDate.toISOString()}
      class="text-xs text-zinc-500 font-mono"
    >
      {postDate.toLocaleDateString('en-US', {
        month: 'short',
        day: 'numeric',
        year: 'numeric',
      })}
    </time>
    
    {tags && tags.length > 0 && (
      <div class="flex gap-1">
        {tags.slice(0, 2).map((tag) => (
          <span class="px-2 py-0.5 text-xs font-mono bg-zinc-950/50 border border-zinc-800/50 rounded text-zinc-400">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>

