---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`bento-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 ${className}`}>
  <slot />
</div>

<style>
  .bento-grid {
    grid-auto-rows: minmax(250px, auto);
  }
  
  /* Ensure large cards span correctly */
  .bento-grid :global(.col-span-2) {
    grid-column: span 2;
  }
  
  .bento-grid :global(.row-span-2) {
    grid-row: span 2;
  }
  
  @media (max-width: 768px) {
    .bento-grid :global(.col-span-2) {
      grid-column: span 1;
    }
  }
</style>

