---
import type { BlogPost } from '../../domains/blog/entities';

interface Props {
  post: BlogPost;
  readTime?: number;
}

const { post, readTime } = Astro.props;
---

<a
  href={`/blog/${post.slug}`}
  class="article-row group block transition-all duration-200 ease"
  data-article-title={post.title}
>
  <div class="article-row-container">
    <!-- Date and Read Time (Left) -->
    <div class="article-date-container">
      <time
        datetime={post.publishedAt.toISOString()}
        class="article-date"
      >
        {post.publishedAt.toLocaleDateString('en-US', {
          month: 'short',
          day: 'numeric',
        })}
      </time>
      {readTime && (
        <>
          <span class="article-separator">·</span>
          <span class="article-read-time">{readTime} min</span>
        </>
      )}
    </div>
    
    <!-- Connector Line (Dots) -->
    <div class="article-connector"></div>
    
    <!-- Title (Right) -->
    <span class="article-title">
      {post.title}
    </span>
    
    <!-- Arrow (Fades in on hover) -->
    <span class="article-arrow">
      →
    </span>
  </div>
</a>

<style>
  .article-row {
    padding: 0.75rem 0;
    transition: all 0.2s ease;
    background: transparent;
  }

  /* Container: Flexbox with space-between */
  .article-row-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  /* Date Container - Fixed width, Left aligned */
  .article-date-container {
    width: 140px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    text-align: left;
  }

  /* Date - Monospace, Muted Grey */
  .article-date {
    font-family: 'JetBrains Mono', 'Geist Mono', 'Courier New', monospace;
    font-size: 0.875rem;
    color: #888;
    white-space: nowrap;
    transition: color 0.2s ease;
  }

  /* Separator (·) - High transparency */
  .article-separator {
    color: rgba(136, 136, 136, 0.4);
    font-size: 0.875rem;
  }

  /* Read Time - Smaller, darker grey */
  .article-read-time {
    font-family: 'JetBrains Mono', 'Geist Mono', 'Courier New', monospace;
    font-size: 0.85em;
    color: #555;
    white-space: nowrap;
    transition: color 0.2s ease;
  }

  /* Connector Line (Dots) */
  .article-connector {
    flex: 1;
    border-bottom: 1px dotted rgba(255, 255, 255, 0.2);
    margin: 0 0.5rem;
    height: 1px;
    transition: border-color 0.2s ease;
  }

  /* Title - Right, White, Serif */
  .article-title {
    font-family: serif, 'Playfair Display', Georgia, serif;
    color: white;
    text-align: right;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  /* Arrow - Fades in on hover */
  .article-arrow {
    color: white;
    opacity: 0;
    transition: opacity 0.2s ease;
    font-size: 1rem;
    flex-shrink: 0;
    margin-left: 0.5rem;
  }

  /* Hover Effects */
  .article-row:hover .article-date {
    color: #aaa;
  }

  .article-row:hover .article-read-time {
    color: #777;
  }

  .article-row:hover .article-title {
    color: #fff;
  }

  .article-row:hover .article-arrow {
    opacity: 1;
  }

  .article-row:hover .article-connector {
    border-bottom-color: rgba(255, 255, 255, 0.3);
  }

  /* Mobile Responsive Styles (< 640px) */
  @media (max-width: 640px) {
    /* Switch to column layout on mobile */
    .article-row-container {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    /* Hide connector on mobile */
    .article-connector {
      display: none;
    }

    /* Date container: Remove fixed width, allow natural flow */
    .article-date-container {
      width: auto;
      margin-bottom: 4px;
    }

    /* Date: Smaller font on mobile */
    .article-date {
      font-size: 12px;
    }

    /* Read Time: Smaller font on mobile */
    .article-read-time {
      font-size: 11px;
    }

    /* Title: Full width, wrap text, left align */
    .article-title {
      width: 100%;
      white-space: normal;
      text-align: left;
      flex-shrink: 1;
    }

    /* Hide arrow on mobile (optional, cleaner look) */
    .article-arrow {
      display: none;
    }
  }
</style>

<script>
  function trackEvent(eventName) {
    if (typeof window !== 'undefined' && window.clarity) {
      window.clarity('event', eventName);
    }
  }

  document.querySelectorAll('.article-row').forEach((row) => {
    row.addEventListener('click', (e) => {
      const articleTitle = row.dataset.articleTitle;
      if (articleTitle) {
        // Sanitize title for event name (remove special chars, limit length)
        const sanitizedTitle = articleTitle
          .replace(/[^a-zA-Z0-9\s]/g, '')
          .replace(/\s+/g, '_')
          .substring(0, 50);
        trackEvent(`Open_Article_${sanitizedTitle}`);
      }
    });
  });
</script>

