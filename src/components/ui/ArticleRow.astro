---
import type { BlogPost } from '../../domains/blog/entities';

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
---

<a
  href={`/blog/${post.slug}`}
  class="article-row group block transition-all duration-200 ease"
>
  <div class="article-row-container">
    <!-- Date (Left) -->
    <time
      datetime={post.publishedAt.toISOString()}
      class="article-date"
    >
      {post.publishedAt.toLocaleDateString('en-US', {
        month: 'short',
        day: 'numeric',
      })}
    </time>
    
    <!-- Connector Line (Dots) -->
    <div class="article-connector"></div>
    
    <!-- Title (Right) -->
    <span class="article-title">
      {post.title}
    </span>
    
    <!-- Arrow (Fades in on hover) -->
    <span class="article-arrow">
      â†’
    </span>
  </div>
</a>

<style>
  .article-row {
    padding: 0.75rem 0;
    transition: all 0.2s ease;
    background: transparent;
  }

  /* Container: Flexbox with space-between */
  .article-row-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  /* Date - Left, Muted Grey, Sans-serif */
  .article-date {
    font-family: sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 0.875rem;
    color: #888;
    text-align: left;
    white-space: nowrap;
    flex-shrink: 0;
    transition: color 0.2s ease;
  }

  /* Connector Line (Dots) */
  .article-connector {
    flex: 1;
    border-bottom: 1px dotted rgba(255, 255, 255, 0.2);
    margin: 0 0.5rem;
    height: 1px;
    transition: border-color 0.2s ease;
  }

  /* Title - Right, White, Serif */
  .article-title {
    font-family: serif, 'Playfair Display', Georgia, serif;
    color: white;
    text-align: right;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  /* Arrow - Fades in on hover */
  .article-arrow {
    color: white;
    opacity: 0;
    transition: opacity 0.2s ease;
    font-size: 1rem;
    flex-shrink: 0;
    margin-left: 0.5rem;
  }

  /* Hover Effects */
  .article-row:hover .article-date {
    color: #aaa;
  }

  .article-row:hover .article-title {
    color: #fff;
  }

  .article-row:hover .article-arrow {
    opacity: 1;
  }

  .article-row:hover .article-connector {
    border-bottom-color: rgba(255, 255, 255, 0.3);
  }
</style>

