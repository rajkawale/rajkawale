---
import SEO from './SEO.astro';
import Clarity from './Clarity.astro';
import NavigationWrapper from './NavigationWrapper.astro';
import Footer from './Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  clarityId?: string;
  keywords?: string;
}

const {
  title = 'Raj Kawale | Product Manager & Founder - Cognitive AI & Systems',
  description = 'Portfolio of Raj Kawale, a Product Manager and Founder specializing in Zero-to-One builds, Cognitive AI systems (RaiTalk), and Agri-tech supply chains.',
  image,
  clarityId = 'ugkqsj83mt',
  keywords = 'Raj Kawale, Product Manager, Founder, Cognitive AI, Systems Thinking, Agri-tech, DeepSeek, React, Next.js',
} = Astro.props;

const siteUrl = Astro.site?.href || '';
const canonicalUrl = siteUrl + Astro.url.pathname;

// Structured Data for Person entity
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Raj Kawale",
  "url": siteUrl || "https://rajkawale.com",
  "jobTitle": "Product Manager & Founder",
  "worksFor": [
    {
      "@type": "Organization",
      "name": "RaiTalk",
      "url": "https://raitalk.rajkawale.com/"
    },
    {
      "@type": "Organization",
      "name": "Madhav Farm"
    }
  ],
  "sameAs": [
    "https://www.linkedin.com/in/rajkawale/",
    "https://github.com/rajkawale",
    "https://raitalk.rajkawale.com/",
    "https://trinka.rajkawale.com/"
  ],
  "description": "A systems-thinking Product Manager and Founder currently building Cognitive AI solutions and scalable tech ventures."
};
---

<!doctype html>
<html lang="en">
  <head>
    <SEO title={title} description={description} image={image} url={canonicalUrl} keywords={keywords} />
    <Clarity measurementId={clarityId} />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[#020617] text-zinc-300 font-sans antialiased deep-mind">
    <NavigationWrapper />
    <slot />
    <Footer />
    
    <!-- Global Clarity Event Tracking -->
    <script is:inline>
      // Track Clarity events
      function trackEvent(eventName) {
        if (typeof window !== 'undefined' && window.clarity) {
          window.clarity('event', eventName);
        }
      }

      // Track email copy events
      document.addEventListener('copy', (e) => {
        const selection = window.getSelection()?.toString() || '';
        // Check if copied text contains email pattern or common email addresses
        const emailPattern = /[\w\.-]+@[\w\.-]+\.\w+/;
        const knownEmails = ['rajendrakawale101@gmail.com', 'rajkawale'];
        
        if (emailPattern.test(selection) || 
            knownEmails.some(email => selection.toLowerCase().includes(email.toLowerCase()))) {
          trackEvent('Copy_Email');
        }
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #020617;
    --color-text-heading: #f1f5f9;
    --color-text-body: #d4d4d8;
    --color-accent-indigo: #818cf8;
  }

  /* Remove ugly tap highlights */
  * {
    -webkit-tap-highlight-color: transparent;
  }

  /* Mobile Best Practices: Keyboard Overlay Fix */
  html {
    scroll-padding-bottom: 20vh;
    -webkit-overflow-scrolling: touch;
    overscroll-behavior-y: none;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background-color: #020617 !important;
    color: #d4d4d8;
    position: relative;
    overflow-x: hidden;
    width: 100%;
    -webkit-overflow-scrolling: touch;
    overscroll-behavior-y: none;
  }

  /* Respect iPhone notch and home bar - Update main containers */
  main {
    padding-bottom: calc(env(safe-area-inset-bottom, 0px) + var(--main-padding-bottom, 0px));
  }

  /* For pages using Tailwind pb-* classes, add safe area */
  @media (max-width: 768px) {
    main.pb-32 {
      padding-bottom: calc(8rem + env(safe-area-inset-bottom));
    }
    main.pb-24 {
      padding-bottom: calc(6rem + env(safe-area-inset-bottom));
    }
    main.pb-16 {
      padding-bottom: calc(4rem + env(safe-area-inset-bottom));
    }
  }

  /* The Breathing Aurora: Two Large Blurred Gradient Orbs - Very Diffuse */
  .deep-mind::before {
    content: '';
    position: fixed;
    top: -20%;
    left: -10%;
    width: 60vw;
    height: 60vh;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.08) 0%, transparent 70%);
    filter: blur(192px); /* blur-3xl = 64px * 3 = 192px for very diffuse effect */
    -webkit-filter: blur(192px);
    pointer-events: none;
    z-index: 0;
    animation: pulse-aurora 8s ease-in-out infinite;
  }

  .deep-mind::after {
    content: '';
    position: fixed;
    bottom: -20%;
    right: -10%;
    width: 60vw;
    height: 60vh;
    background: radial-gradient(circle, rgba(6, 182, 212, 0.08) 0%, transparent 70%);
    filter: blur(192px); /* blur-3xl = 64px * 3 = 192px for very diffuse effect */
    -webkit-filter: blur(192px);
    pointer-events: none;
    z-index: 0;
    animation: pulse-aurora 10s ease-in-out infinite reverse;
  }

  @keyframes pulse-aurora {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  /* Ensure content is above background layers */
  body > * {
    position: relative;
    z-index: 1;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', Georgia, serif;
    color: #f1f5f9; /* Slate-100 - Cool white for blue-toned background */
  }

  /* Monospace for Builder metadata */
  code, .font-mono, [class*="mono"] {
    font-family: 'JetBrains Mono', 'Geist Mono', 'Courier New', monospace;
  }

  a {
    transition: color 0.2s ease, border-color 0.2s ease;
  }
</style>

