---
import LinkedInIcon from './icons/LinkedInIcon';
import GithubIcon from './icons/GithubIcon';
---

<footer class="footer-container">
  <div class="footer-content">
    <!-- Top Row: Brand and Links -->
    <div class="footer-top-row">
      <!-- Left Column: Brand -->
      <div class="footer-brand">
        <h2 class="footer-logo">RajKawale</h2>
        <p class="footer-tagline">Thinking in systems. Building for people.</p>
      </div>

      <!-- Right Column: Links Grid -->
      <div class="footer-links">
        <!-- Column A: Sitemap -->
        <div class="footer-column">
          <h3 class="footer-column-title">EXPLORE</h3>
          <nav class="footer-nav">
            <a href="/" class="footer-link">Home</a>
            <a href="/work" class="footer-link">Work</a>
            <a href="/blog" class="footer-link">Writing</a>
            <a href="/contact" class="footer-link">Contact</a>
          </nav>
        </div>

        <!-- Column B: Socials (Icon-Only) -->
        <div class="footer-column">
          <h3 class="footer-column-title">CONNECT</h3>
          <nav class="footer-social-icons">
            <a 
              href="https://www.linkedin.com/in/rajkawale/" 
              target="_blank" 
              rel="noopener noreferrer"
              class="footer-icon-link"
              aria-label="LinkedIn"
              data-track="Click_Social_LinkedIn"
            >
              <LinkedInIcon client:load className="footer-icon" />
            </a>
            <a 
              href="https://github.com/rajkawale" 
              target="_blank" 
              rel="noopener noreferrer"
              class="footer-icon-link"
              aria-label="GitHub"
              data-track="Click_Social_GitHub"
            >
              <GithubIcon client:load className="footer-icon" />
            </a>
          </nav>
        </div>
      </div>
    </div>

    <!-- Bottom Row: Copyright and Tech Stack (Unified Bar) -->
    <div class="footer-bottom-row">
      <p class="footer-copyright">© 2024 Raj Kawale</p>
      <div class="footer-badge">
        Built with Astro • Tailwind • Vercel
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-container {
    padding: 60px 0 calc(40px + env(safe-area-inset-bottom)) 0;
    position: relative;
    z-index: 1;
    background: transparent;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Top Row: Brand and Links */
  .footer-top-row {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 40px;
    margin-bottom: 3rem;
  }

  /* Left Column: Brand */
  .footer-brand {
    flex: 1;
    min-width: 280px;
  }

  .footer-logo {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .footer-tagline {
    color: #888;
    font-size: 1rem;
    font-weight: 300;
    margin: 0;
    line-height: 1.6;
  }

  /* Right Column: Links Grid */
  .footer-links {
    display: flex;
    gap: 60px;
    flex-wrap: wrap;
  }

  .footer-column {
    min-width: 120px;
  }

  .footer-column-title {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #a1a1aa;
    margin: 0 0 1rem 0;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    color: #888;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 300;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: #fff;
  }

  /* Social Icons Row */
  .footer-social-icons {
    display: flex;
    flex-direction: row;
    gap: 20px;
    align-items: center;
  }

  .footer-icon-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .footer-icon {
    width: 18px;
    height: 18px;
    color: #888;
    transition: all 0.2s ease;
  }

  .footer-icon-link:hover .footer-icon {
    color: #fff;
    transform: scale(1.1);
  }

  /* Bottom Row: Copyright and Tech Stack (Unified Bar) */
  .footer-bottom-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 40px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-copyright {
    font-family: 'JetBrains Mono', 'Geist Mono', 'Courier New', monospace;
    font-size: 0.75rem;
    color: #555;
    margin: 0;
    font-weight: 300;
  }

  /* Tech Stack Badge */
  .footer-badge {
    display: inline-block;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    font-family: 'JetBrains Mono', 'Geist Mono', 'Courier New', monospace;
    padding: 0.5rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 9999px;
    background: transparent;
    opacity: 0.5;
    font-weight: 300;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .footer-container {
      padding: 60px 0 40px 0;
    }

    .footer-top-row {
      flex-direction: column;
      text-align: center;
      gap: 3rem;
      margin-bottom: 2rem;
    }

    .footer-brand {
      min-width: 100%;
    }

    .footer-links {
      justify-content: center;
      width: 100%;
      gap: 3rem;
      flex-direction: column;
    }

    .footer-column {
      min-width: auto;
    }

    .footer-nav {
      align-items: center;
    }

    /* Social Icons: Center and below text links on mobile */
    .footer-social-icons {
      justify-content: center;
    }

    .footer-bottom-row {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .footer-logo {
      font-size: 2rem;
    }

    .footer-links {
      flex-direction: column;
      gap: 2rem;
    }
  }
</style>

<script>
  // Track Clarity events
  function trackEvent(eventName) {
    if (typeof window !== 'undefined' && window.clarity) {
      window.clarity('event', eventName);
    }
  }

  // Track social icon clicks
  document.querySelectorAll('.footer-icon-link[data-track]').forEach((link) => {
    link.addEventListener('click', () => {
      const eventName = link.dataset.track;
      if (eventName) {
        trackEvent(eventName);
      }
    });
  });
</script>

