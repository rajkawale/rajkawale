        <script define:vars={{ projectCount: allProjects.length, featuredCount: featuredProjects.length, showCount: projectsToShow.length }}>
          console.log('üîç Browser Console Debug:', {
            allProjects: projectCount,
            featuredProjects: featuredCount,
            projectsToShow: showCount,
            timestamp: new Date().toISOString()
          });
        </script>
      </div>
    </section>

    <!-- Section Divider -->
    <div class="section-divider-wrapper flex justify-center">
      <div class="section-divider"></div>
    </div>

    <!-- Trusted By Section -->
    <TrustedBy />

    <!-- Section Divider -->
    <div class="section-divider-wrapper flex justify-center">
      <div class="section-divider"></div>
    </div>

    <!-- Think. Section -->
    <section id="writing" class="section-spacer pb-24 px-6 md:px-12 mt-24">
      <div class="max-w-4xl mx-auto">
        <div class="mb-16 text-center">
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-slate-100 mb-4">
            Think<span class="text-gray-500">.</span>
          </h2>
          <p class="text-zinc-400 text-lg font-sans">
            Making sense of product decisions, business mechanics, and mental models.
          </p>
        </div>

        <style>
          /* Glass Card Hover Effect - Matching Work Section */
          .think-featured-card {
            transition: all 0.3s ease-out;
          }

