<script>
  // Track Clarity events
  function trackEvent(eventName: string) {
    const win = window as any;
    if (typeof window !== 'undefined' && win.clarity) {
      win.clarity('event', eventName);
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Track featured post interactions
    const featuredPost = document.querySelector('[data-track-featured-post]');
    if (featuredPost) {
      featuredPost.addEventListener('click', () => {
        trackEvent('Featured_Post_Click');
      });
      
      // Track hover (intent signal)
      let hoverTracked = false;
      featuredPost.addEventListener('mouseenter', () => {
        if (!hoverTracked) {
          trackEvent('Featured_Post_Hover');
          hoverTracked = true;
        }
      });
    }

    // Track hero RaiTalk card click
    const heroRaiTalk = document.querySelector('[data-track-hero-raitalk]');
    if (heroRaiTalk) {
      heroRaiTalk.addEventListener('click', () => {
        trackEvent('Hero_RaiTalk_Click');
      });
    }

    // Track archive link click
    const archiveLink = document.querySelector('[data-track-archive-link]');
    if (archiveLink) {
      archiveLink.addEventListener('click', () => {
        trackEvent('Click_View_Full_Archive');
      });
    }

    // Track View All Work link click
    const viewAllWorkLink = document.querySelector('[data-track-view-all-work]');
    if (viewAllWorkLink) {
      viewAllWorkLink.addEventListener('click', () => {
        trackEvent('Click_View_All_Work');
      });
    }



    // Handle Homepage Drive Viewer button clicks
    document.querySelectorAll('.featured-drive-viewer-button').forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        const fileId = button.getAttribute('data-drive-file-id');
        const title = button.getAttribute('data-drive-title') || 'Document Viewer';
        
        if (fileId && typeof window !== 'undefined' && window.openDriveViewer) {
          window.openDriveViewer(fileId, title);
          trackEvent(`Click_Homepage_PitchDeck_${title.replace(/\s+/g, '_')}`);
        }
      });
    });

    // Track scroll past hero
    let heroScrollTracked = false;
    const heroSection = document.getElementById('home');
    if (heroSection) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (!entry.isIntersecting && !heroScrollTracked && window.scrollY > 100) {
            trackEvent('Hero_Scroll_Down');
            heroScrollTracked = true;
            observer.disconnect();
          }
        });
      }, { threshold: 0 });
      observer.observe(heroSection);
    }

  });
</script>
