---
import BaseLayout from "../components/BaseLayout.astro";
import TestimonialsComponent from "../components/Testimonials.astro";
import BackNavigation from "../components/ui/BackNavigation.astro";

let testimonialsData: any[] = [];
try {
  const data = await import("../data/testimonials.json");
  testimonialsData = data.default || [];
} catch (e) {
  testimonialsData = [];
}
---

<BaseLayout
  title="Testimonials - Raj Kawale"
  description="What people say about working with Raj Kawale"
>
  <main
    class="min-h-screen bg-[#020617] text-zinc-300 pt-24 py-24 px-6 md:px-12 relative z-10"
  >
    <div class="max-w-7xl mx-auto">
      <header class="mb-12 border-b border-zinc-800 pb-6">
        <h1
          class="text-4xl md:text-5xl font-serif font-bold text-slate-100 mb-4"
        >
          Testimonials
        </h1>
        <p class="text-lg text-zinc-300 font-sans">
          Feedback from colleagues, clients, and collaborators.
        </p>
      </header>

      <TestimonialsComponent testimonials={testimonialsData} />
    </div>
  </main>
</BaseLayout>
